            <assertion-sql sql="SHOW READWRITE_SPLITTING RULES;" />
        </assertion>
    </test-case>
    <test-case sql="ALTER READWRITE_SPLITTING RULE readwrite_ds (WRITE_RESOURCE=ds_0,READ_RESOURCES(ds_0),TYPE(NAME='RANDOM'));" db-types="MySQL, PostgreSQL">
