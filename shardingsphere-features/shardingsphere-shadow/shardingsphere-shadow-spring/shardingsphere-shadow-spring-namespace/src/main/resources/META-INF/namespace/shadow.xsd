<xsd:schema xmlns="http://shardingsphere.apache.org/schema/shardingsphere/shadow"
            xmlns:xsd="http://www.w3.org/2001/XMLSchema"
            targetNamespace="http://shardingsphere.apache.org/schema/shardingsphere/shadow"
            elementFormDefault="qualified">
    <xsd:import namespace="http://www.springframework.org/schema/beans" schemaLocation="http://www.springframework.org/schema/beans/spring-beans.xsd"/>
    
    <xsd:element name="rule">
        <xsd:complexType>
            <xsd:all>
                <xsd:element ref="mappings" />
            </xsd:all>
            <xsd:attribute name="id" type="xsd:string" use="required" />
            <xsd:attribute name="column" type="xsd:string" use="required" />
        </xsd:complexType>
    </xsd:element>
    
     <xsd:element name="mappings">
       <xsd:complexType>
            <xsd:sequence>
                <xsd:element ref="mapping" maxOccurs="unbounded"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
     <xsd:element name="mapping">
        <xsd:complexType>
            <xsd:attribute name="product-data-source-name" type="xsd:string" use="required" />
            <xsd:attribute name="shadow-data-source-name" type="xsd:string" use="required" />
        </xsd:complexType>
    </xsd:element>
</xsd:schema>
