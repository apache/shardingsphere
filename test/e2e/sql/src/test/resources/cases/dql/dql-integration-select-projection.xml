    </test-case>
    
    <test-case sql="SELECT item_id, (SELECT order_id FROM t_order WHERE user_id = ? AND order_id = ?) AS order_id FROM  t_order_item i WHERE i.user_id = ? AND i.order_id = ?" db-types="MySQL" scenario-types="db">
