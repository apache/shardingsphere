    </test-case>
    
    <test-case sql="SELECT 12 AS order_id, order_id FROM t_order WHERE user_id = ? AND order_id = ?" db-types="MySQL" scenario-types="db,tbl,dbtbl_with_readwrite_splitting,readwrite_splitting">
